{
  "name": "spoteyfa",
  "version": "0.2.1",
  "description": "Apple-Style Spotify Player with Setup Wizard and Performance Optimizations",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": ["electron", "spotify", "apple", "music", "glassmorphism"],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "spotify-web-api-node": "^5.0.2"
  },
  "build": {
    "appId": "com.apple.spotify.player",
    "productName": "Apple Spotify Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "style.css",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    }
  }
}