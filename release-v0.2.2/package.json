{
  "name": "spoteyfa",
  "version": "0.2.1",
  "description": "Apple-Style Spotify Player with Setup Wizard and Performance Optimizations",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish=never",
    "build:portable": "electron-builder --win --publish=never",
    "release": "electron-builder --win --publish=always"
  },
  "keywords": ["electron", "spotify", "apple", "music", "glassmorphism"],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "spotify-web-api-node": "^5.0.2"
  },
  "build": {
    "appId": "com.apple.spotify.player",
    "productName": "Apple Spotify Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "config.js", 
      "setup-wizard.js",
      "index.html",
      "style.css",
      ".env.example",
      "BETA_CHANGELOG.md"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "publisherName": "Claude Code",
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Apple Spotify Player"
    }
  }
}